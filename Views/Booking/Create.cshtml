@model CreateBookingViewModel
@{
    ViewData["Title"] = "Ny booking";
}

<div class="page-header">
    <h1>Ny booking - @Model.RoomName</h1>
    <a asp-action="Index" asp-route-date="@Model.Date.ToString("yyyy-MM-dd")" class="btn btn-secondary">Tilbake</a>
</div>

<div class="form-container">
    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="RoomId" />
        
        <div asp-validation-summary="All" class="validation-summary"></div>
        
        <div class="form-group">
            <label asp-for="Date">Dato</label>
            <input asp-for="Date" type="date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        
        <div class="form-row">
            <div class="form-group">
                <label asp-for="StartTime">Fra</label>
                <select asp-for="StartTime" class="form-control">
                    @for (var hour = 8; hour < 16; hour++)
                    {
                        for (var minute = 0; minute < 60; minute += 30)
                        {
                            var time = new TimeSpan(hour, minute, 0);
                            var timeValue = time.ToString(@"hh\:mm\:ss");
                            var timeDisplay = time.ToString(@"hh\:mm");
                            var isSelected = time == Model.StartTime;
                            
                            if (isSelected)
                            {
                                <option value="@timeValue" selected>@timeDisplay</option>
                            }
                            else
                            {
                                <option value="@timeValue">@timeDisplay</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="EndTime">Til</label>
                <select asp-for="EndTime" class="form-control">
                    @for (var hour = 8; hour <= 16; hour++)
                    {
                        for (var minute = 0; minute < 60; minute += 30)
                        {
                            if (hour == 16 && minute > 0) break;
                            
                            var time = new TimeSpan(hour, minute, 0);
                            var timeValue = time.ToString(@"hh\:mm\:ss");
                            var timeDisplay = time.ToString(@"hh\:mm");
                            var isSelected = time == Model.EndTime;
                            
                            if (isSelected)
                            {
                                <option value="@timeValue" selected>@timeDisplay</option>
                            }
                            else
                            {
                                <option value="@timeValue">@timeDisplay</option>
                            }
                        }
                    }
                </select>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-group">
            <label asp-for="Notes">Notater (valgfritt)</label>
            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Notes" class="text-danger"></span>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Opprett booking</button>
            <a asp-action="Index" asp-route-date="@Model.Date.ToString("yyyy-MM-dd")" class="btn btn-secondary">Avbryt</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
